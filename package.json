{
  "name": "chrome-extension-boilerplate-react-vite",
  "version": "0.0.1",
  "description": "chrome extension boilerplate",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jonghakseo/chrome-extension-boilerplate-react-vite.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:check": "tsc --noEmit && vite build --mode development",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "commitlint": "commitlint --edit",
    "dev": "yarn build:hmr && (run-p wss build:watch)",
    "dev:firefox": "yarn build:hmr && (run-p wss build:firefox:watch)",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "test": "vitest",
    "wss": "node utils/reload/initReloadServer.js"
  },
  "type": "module",
  "dependencies": {
    "@primer/css": "^21.5.1",
    "@primer/octicons-react": "^19.15.2",
    "@primer/primitives": "^10.7.0",
    "@primer/react": "^37.24.0",
    "classnames": "2.5.1",
    "construct-style-sheets-polyfill": "3.1.0",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "styled-components": "^6.1.18",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-sucrase": "5.0.2",
    "@rollup/plugin-typescript": "11.1.6",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.263",
    "@types/node": "20.8.10",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.2",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.18.1",
    "@vitejs/plugin-react": "4.2.0",
    "chokidar": "4.0.3",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-primer-react": "^7.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "15.2.0",
    "magic-string": "^0.30.6",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "rollup": "4.3.0",
    "sass": "1.87.0",
    "stylelint": "16.19.1",
    "stylelint-config-recess-order": "6.0.0",
    "stylelint-config-standard": "38.0.0",
    "stylelint-order": "6.0.4",
    "stylelint-prettier": "5.0.3",
    "stylelint-scss": "6.11.1",
    "ts-loader": "9.5.2",
    "tslib": "2.6.2",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "3.1.3",
    "ws": "8.14.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}
